.container
  %h1.text-center= @list.name
  %table.table.table-striped.mt-5
    %thead.table-dark
      %tr
        %th Name
        %th Description
    %tbody
      %tr
        %td= @list.name
        %td= @list.description

  = link_to 'Edit', edit_user_list_path(current_user,@list.id), class: 'btn btn-sm btn-info'
  = link_to 'Delete', user_list_path(current_user,@list.id), method: :delete, class: 'btn btn-sm btn-danger'  
  %br
  %br
  -unless many_tasks==0
    .progress
      .progress-bar.progress-bar-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{bar}", :role => "progressbar", :style => "width: #{bar}%"}
    #{bar}% Done
  -else
    .alert.alert-info
      %strong There's no task here!
      Press the bottom below to a create a task
  %br
  %br    
  = link_to "Tasks #{many_tasks}", user_list_tasks_path(current_user,@list.id), class: 'btn btn-sm btn-success'
  %br
  %br    
  =link_to 'Back', user_lists_path, class: 'btn btn-sm btn-secondary'