.container
  %h1 Update List
  =form_for [current_user, @list] do |f|

    .form-group
      =f.label :name
      =f.text_field :name, class: 'form-control'
    .form-group 
      =f.label :description
      %textarea#textarea.form-control{name: "list[description]"} 
    
    .form-group
      =f.submit 'Update', class: 'btn btn-primary'
  = link_to 'Back', user_lists_path, class: 'btn btn-sm btn-secondary'